{# purpose of this template: module configuration page #}
{% extends 'TdMMapsModule::adminBase.html.twig' %}
{% block title __('Settings') %}
{% block admin_page_icon 'wrench' %}
{% block content %}
    <div class="tdmmapsmodule-config">
        {% form_theme form with [
            '@TdMMapsModule/Form/bootstrap_3.html.twig',
            'ZikulaFormExtensionBundle:Form:form_div_layout.html.twig'
        ] %}
        {{ form_start(form) }}
        <div class="zikula-bootstrap-tab-container">
            <ul class="nav nav-tabs">
                {% set tabTitle = __('Moderation') %}
                <li role="presentation" class="active">
                    <a id="vars1Tab" href="#tab1" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
                {% set tabTitle = __('List views') %}
                <li role="presentation">
                    <a id="vars2Tab" href="#tab2" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
                {% set tabTitle = __('Images') %}
                <li role="presentation" class=" dropdown">
                    <a id="imagesTabDrop" class="dropdown-toggle" href="#" data-toggle="dropdown" aria-controls="imagesTabDropSections" aria-expanded="false" title="{{ tabTitle|e('html_attr') }}">{{ tabTitle }}<span class="caret"></span></a>
                    <ul id="imagesTabDropSections" class="dropdown-menu" aria-labelledby="imagesTabDrop">
                    <li>
                        <a id="imagesMapForegroundTab" href="#tabImagesMapForeground" role="tab" data-toggle="tab" aria-controls="tabImagesMapForeground">{{ __('Maps foreground') }}</a>
                    </li>
                    <li>
                        <a id="imagesMapUndergroundTab" href="#tabImagesMapUnderground" role="tab" data-toggle="tab" aria-controls="tabImagesMapUnderground">{{ __('Maps underground') }}</a>
                    </li>
                    </ul>
                </li>
                {% set tabTitle = __('Integration') %}
                <li role="presentation">
                    <a id="vars4Tab" href="#tab4" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
                {% set tabTitle = __('Workflows') %}
                <li role="presentation">
                    <a id="workflowsTab" href="#tabWorkflows" title="{{ tabTitle|e('html_attr') }}" role="tab" data-toggle="tab">{{ tabTitle }}</a>
                </li>
            </ul>

            {{ form_errors(form) }}
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="tab1" aria-labelledby="vars1Tab">
                    {% set tabTitle = __('Moderation') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('Here you can assign moderation groups for enhanced workflow actions.')|nl2br }}</p>
                    
                        {{ form_row(form.moderationGroupForMaps) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tab2" aria-labelledby="vars2Tab">
                    {% set tabTitle = __('List views') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('Here you can configure parameters for list views.')|nl2br }}</p>
                    
                        {{ form_row(form.mapEntriesPerPage) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabImagesMapForeground" aria-labelledby="imagesMapForegroundTab">
                    {% set tabTitle = __('Image settings for maps foreground') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        {{ form_row(form.enableShrinkingForMapForeground) }}
                        <div id="shrinkDetailsMapForeground">
                        {{ form_row(form.shrinkWidthMapForeground) }}
                        {{ form_row(form.shrinkHeightMapForeground) }}
                        </div>
                        {{ form_row(form.thumbnailModeMapForeground) }}
                        {{ form_row(form.thumbnailWidthMapForegroundView) }}
                        {{ form_row(form.thumbnailHeightMapForegroundView) }}
                        {{ form_row(form.thumbnailWidthMapForegroundDisplay) }}
                        {{ form_row(form.thumbnailHeightMapForegroundDisplay) }}
                        {{ form_row(form.thumbnailWidthMapForegroundEdit) }}
                        {{ form_row(form.thumbnailHeightMapForegroundEdit) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabImagesMapUnderground" aria-labelledby="imagesMapUndergroundTab">
                    {% set tabTitle = __('Image settings for maps underground') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        {{ form_row(form.enableShrinkingForMapUnderground) }}
                        <div id="shrinkDetailsMapUnderground">
                        {{ form_row(form.shrinkWidthMapUnderground) }}
                        {{ form_row(form.shrinkHeightMapUnderground) }}
                        </div>
                        {{ form_row(form.thumbnailModeMapUnderground) }}
                        {{ form_row(form.thumbnailWidthMapUndergroundView) }}
                        {{ form_row(form.thumbnailHeightMapUndergroundView) }}
                        {{ form_row(form.thumbnailWidthMapUndergroundDisplay) }}
                        {{ form_row(form.thumbnailHeightMapUndergroundDisplay) }}
                        {{ form_row(form.thumbnailWidthMapUndergroundEdit) }}
                        {{ form_row(form.thumbnailHeightMapUndergroundEdit) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tab4" aria-labelledby="vars4Tab">
                    {% set tabTitle = __('Integration') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                    
                        <p class="alert alert-info">{{ __('These options allow you to configure integration aspects.')|nl2br }}</p>
                    
                        {{ form_row(form.enabledFinderTypes) }}
                    </fieldset>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="tabWorkflows" aria-labelledby="workflowsTab">
                    {% set tabTitle = __('Workflows') %}
                    <fieldset>
                        <legend>{{ tabTitle }}</legend>
                
                        <p class="alert alert-info">{{ __('Here you can inspect and amend the existing workflows.') }}</p>
                
                        <h4>{{ __('Maps') }}</h4>
                        <p><a href="{{ path('zikula_workflow_editor_index', {workflow: 'tdmmapsmodule_standard'}) }}" title="{{ __('Edit workflow for maps') }}" target="_blank"><i class="fa fa-cubes"></i> {{ __('Edit maps workflow') }}</a>
                    </fieldset>
                </div>
            </div>
        </div>

        <div class="form-group form-buttons">
            <div class="col-sm-offset-3 col-sm-9">
                {{ form_widget(form.save) }}
                {{ form_widget(form.reset) }}
                {{ form_widget(form.cancel) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
    {{ pageAddAsset('javascript', zasset('@TdMMapsModule:js/TdMMapsModule.Config.js')) }}
    {{ pageAddAsset('javascript', zasset('@TdMMapsModule:js/TdMMapsModule.Validation.js'), 98) }}
    {{ pageAddAsset('javascript', zasset('@TdMMapsModule:js/TdMMapsModule.EditFunctions.js'), 99) }}
    {% set formInitScript %}
        <script>
        /* <![CDATA[ */
            ( function($) {
                $(document).ready(function() {
                    tdMMapsInitEditForm('edit', '1');
                });
            })(jQuery);
        /* ]]> */
        </script>
    {% endset %}
    {{ pageAddAsset('footer', formInitScript) }}
{% endblock %}
